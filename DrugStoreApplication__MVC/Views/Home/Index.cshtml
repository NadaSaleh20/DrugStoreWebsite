@using Microsoft.AspNetCore.Identity;
@inject UserManager<DataBase.Data.PharmcyInfo> UserManager;

@{
    Layout = "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/HomePage.css" />
    <link href="https://fonts.googleapis.com/css?family=Pacifico" rel="stylesheet">
    <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>

</head>
<body>
    <header class="nav-margin">
        <nav class="navbar navbar-expand-lg navbar-light">
            <a class="navbar-brand" href="#">
                <img src="~/img/logo-removebg-preview.png" width="50" height="50" alt="" style="margin-left:40px">
            </a>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav" id="item" style="margin-left:20px">
                    <li class="nav-item">
                        <a class="nav-link" href="#HomeSection" style="color:aliceblue">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#FounderSection" style="color:aliceblue">Founder</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#AboutUs" style="color:aliceblue">About Us</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#Mission" style="color:aliceblue">Mission&Vision</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="#SalesRepresentatives" style="color:aliceblue">Our Team</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#" style="color:aliceblue">Our Values</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#" style="color:aliceblue">Our Customers</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#" style="color:aliceblue">Contact Us</a>
                    </li>
                </ul>
            </div>
        </nav>
        @if (@User.IsInRole("Admin"))
        {

            <partial name="_adminHeaderSection" />
        }
        else if (@User.IsInRole("User"))
        {
            <partial name="_PharmcyHeader" />
                }

                else
                {
                   
                <form class="form-inline">
                <button class="btn btn-outline-success my-2 my-sm-0 mangeButtonOrder" type="submit"
                        asp-controller="Home" asp-action="LoginPage">
                    OrderNow
                </button>
                <button class="btn btn-outline-success my-2 my-sm-0 mangeButtonSiginIn " type="submit"
                        asp-controller="Home" asp-action="LoginPage">
                    SignIn
                </button>
            </form>
        }
    </header>


    <partial name="_HomePageSection" />
    <partial name="_Footer" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>

</body>

</html>
